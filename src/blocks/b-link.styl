.b-link
  color: linkColor
  transition: all 0.4s ease-out

  &:link,
  &:hover,
  &:visited
    text-decoration: none

    color: linkColorHover


.b-link_disabled_yes,
.b-link_disabled_yes:hover,
a.b-link_disabled_yes:link,
a.b-link_disabled_yes:visited
  color: grayLight !important
  cursor: default !important
  outline: 0
